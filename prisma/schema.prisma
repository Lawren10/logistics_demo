// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model customer {
  id   String                   @id @default(uuid())
  firstName String
  lastName String
  email String @unique
  phone String @unique
  address String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}