// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


//customers Table Model
model Customers {
  id   String @id 
  firstName String
  lastName String
  email String 
  phone String @unique
  address String
  shipments Shipment[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
}

//ShipmentBatch/shipmentItems Table Model
model ShipmentBatch{
  id String @id 
  items Json
  shipmentId Shipment?
  createdAt DateTime @default(now())
  
}

//Shipment Table Model
model Shipment{
  id String @id 
  customerId String
  customer Customers @relation(fields: [customerId],references: [id])
  items ShipmentBatch @relation(fields: [itemsId],references: [id])
  itemsId String @unique
  deliveryMode String
  deliveryDate String
  shippingDate String
  receiverDetail Json
  trackingNumberId ShipmentTracking? @relation(fields: [trackingNumber],references: [id])
  trackingNumber String? @unique 
  createdAt DateTime @default(now())
}

//Shipment Tracking Table Model
model ShipmentTracking{
  id String @id 
  shipmentId Shipment?
  processing DateTime?
  shipped DateTime?
  arrived DateTime?
  delivered DateTime?
  shipingProcess Int @default(1)
}